#Remove a directory
rm -R directory

#Check Ubuntu version
lsb_release -a

# On Ubuntu 18.04 (bionic)
sudo netplan ip leases eth0

#How to know my getway
route -nee

#IPConfig
ip a

# Configure IP
sudo nano /etc/netplan/50-cloud-init.yaml

#File config (Avoid tab, yaml doesn't support TAB)
network:
  version: 2
  renderer: networkd
  ethernets:
    eth0:
      dhcp4: no
      dhcp6: no
      addresses: [192.168.1.100/24]
      gateway4: 192.168.1.1
      nameservers:
        addresses: [8.8.8.8,8.8.4.4]


sudo netplan apply

#Add a user to a group
sudo usermod -a -G groupName userName

#list groups
sudo groups

#How to delete programs
sudo apt-get purge 'php*'
apt-get clean


#How to list all installed programs
dpkg --list

#List the users from a group
getent group groupName

#To know Version release
$ lsb_release -a
